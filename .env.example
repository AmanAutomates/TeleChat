# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Telegram API credentials (from https://my.telegram.org → API Development Tools)
# These are ALWAYS required — even in bot‑only mode (Telethon needs them).
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Set CREATE_USER_BOT=True to also monitor your personal account's DMs
CREATE_USER_BOT=False

# Phone number for userbot (only needed when CREATE_USER_BOT=True)
PHONE_NUMBER=+91XXXXXXXXXX

# Web server settings
WEB_HOST=127.0.0.1
WEB_PORT=8080
