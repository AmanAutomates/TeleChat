# Telegram Bot Token (from @BotFather)
# Required for both Bot-Only and Userbot modes
BOT_TOKEN=your_bot_token_here

# Mode toggle: Set CREATE_USER_BOT=True to also monitor your personal account's DMs
CREATE_USER_BOT=False

# Allowed / Banned Users
# Comma separated list of Telegram User IDs allowed to chat with your bot
ALLOWED_USERS=12345678,98765432
# Comma separated list of User IDs fully blocked from triggering the bot
BANNED_USERS=

# Telegram API credentials (from https://my.telegram.org -> API Development Tools)
# ONLY required when CREATE_USER_BOT=True
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Phone number for Userbot (ONLY needed when CREATE_USER_BOT=True)
PHONE_NUMBER=+91XXXXXXXXXX

# Web server settings
WEB_HOST=127.0.0.1
WEB_PORT=8080
